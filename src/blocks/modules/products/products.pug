include ../../components/more-detailed/more-detailed

//- Mixin
mixin product-card (img, title-f, title-s)
    .product__card.card-product
        .card-product__block-img 
            img.card-product__img(src= img, alt="")
        h4.card-product__title= title-f
        .card-product__block-link
            +more-detailed('#')
        .card-product__info.product-info.product-info--active
            h3.product-info__title= title-s
            p.product-info__text Коррозия подземных трубопроводов является одной из причин их разгермитизации вследствии образования каверн, трещин и разрывов.


.product
    .container
        h2.product__title Продукция
        .products__slider.product-slider
            .swiper-container.product-slider__wrapper 
                .swiper-wrapper
                    .swiper-slide
                        +product-card('tpl/assets/img/product.png', 'Станции катодной защиты ПКЗ-АР', 'Станции катодной защиты ПКЗ-АР')
                    .swiper-slide 
                        +product-card('tpl/assets/img/product.png', 'Оборудование ЭХЗ', 'Оборудование ЭХЗ')
                    .swiper-slide 
                        +product-card('tpl/assets/img/product.png', 'Телеметрия ЭХЗ', 'Телеметрия ЭХЗ')
                    .swiper-slide 
                        +product-card('tpl/assets/img/product.png', 'Комплекс телемеханики', 'Комплекс телемеханики')
                    .swiper-slide 
                        +product-card('tpl/assets/img/product.png', 'Комплекс телемеханики', 'Комплекс телемеханики')
                    .swiper-slide 
                        +product-card('tpl/assets/img/product.png', 'Оборудование ЭХЗ', 'Оборудование ЭХЗ')
                    .swiper-slide 
                        +product-card('tpl/assets/img/product.png', 'Телеметрия ЭХЗ', 'Телеметрия ЭХЗ')
                    .swiper-slide
                        +product-card('tpl/assets/img/product.png', 'Станции катодной защиты ПКЗ-АР', 'Станции катодной защиты ПКЗ-АР')